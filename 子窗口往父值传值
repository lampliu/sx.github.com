//子集窗口
<script>
	$('[name=name]').on('click',function(){
	    var val = $(this).val();
        $('[name=manager_id]',parent.document.body).val(val);
        $('[name=manager_name]',parent.document.body).val(val);
        window.parent.closeAll();
	});
</script>

父级窗口
    //关闭窗口
    function closeAll() {
        layer.closeAll();
    }


